<div class="panel panel-primary container-feedback">
	<div class="panel-heading">
		<h3 class="panel-title">{{text_title}}</h3>
	</div>
	<div class="panel-body">
		<div class="form-group required">
			<label class="control-label">{{text_name}}</label>
			<input type="text" name="name" value="" class="form-control" />
		</div>
		<div class="form-group required">
			<label class="control-label">{{text_email}}</label>
			<input type="email" name="email" value="" class="form-control" />
		</div>
		<div class="form-group required">
			<label class="control-label">{{text_phone}}</label>
			<input type="phone" name="phone" value="" class="form-control" />
		</div>
		<button type="button" class="btn btn-primary btn-lg btn-block" onclick="feedback.send(event);">{{button_send}}</button>
	</div>
</div>